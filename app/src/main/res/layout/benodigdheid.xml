<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="213dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="0.5"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="60dp"
        android:text="Buzzy Pass"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/omkaderingBenodigdheid"
        app:layout_constraintStart_toStartOf="@+id/omkaderingBenodigdheid"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_weight="0.5"
        android:src="@drawable/buspas"
        app:layout_constraintEnd_toEndOf="@+id/omkaderingBenodigdheid"
        app:layout_constraintStart_toStartOf="@+id/omkaderingBenodigdheid"
        app:layout_constraintTop_toTopOf="@+id/omkaderingBenodigdheid" />

    <ImageView
        android:id="@+id/omkaderingBenodigdheid"
        android:layout_width="165dp"
        android:layout_height="156dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:src="@drawable/whiterect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />


</android.support.constraint.ConstraintLayout>