<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dreeki.projectleerlingenapp.Fragments.EersteKeerOpenenStap2Fragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvIcoonPersoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="50dp"
            android:text="Welke icoon wil {persoon}?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="26dp"
            android:text="2/6"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/btnGoNextStep2"
            app:layout_constraintStart_toEndOf="@+id/btnGoPreviousStep2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnGoNextStep2"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/bigger"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnGoPreviousStep2"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/smaller"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/prent1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prent2"
            app:srcCompat="@drawable/architect"
            android:layout_marginLeft="16dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/prent2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIcoonPersoon"
            app:srcCompat="@drawable/construction_icon"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/prent3"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/prent6"
            app:layout_constraintStart_toEndOf="@+id/prent1"
            app:layout_constraintTop_toBottomOf="@+id/tvIcoonPersoon"
            app:srcCompat="@drawable/cook_male"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/prent4"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIcoonPersoon"
            app:srcCompat="@drawable/fireman_icon"
            android:layout_marginRight="16dp"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/prent5"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/prent6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toEndOf="@+id/prent1"
            app:layout_constraintTop_toBottomOf="@+id/prent3"
            app:srcCompat="@drawable/cook"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/prent6"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prent4"
            app:srcCompat="@drawable/worker"
            android:clickable="true"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
